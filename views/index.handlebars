
<!-- Header -->
<div class="container">
    <div class="jumbotron" id="jumboheader">
    <h1 id="header">
        Eat-Da-Burger
    </h1>
        <h2 class="h2">Chow down on a burger!</h2>
    </div>
</div>

<!-- Updates burger data to window. -->
<div class="container">
    <div class="col-md-6">
        <h3 class= "header-format">Burgers</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <h4 class="header-format">
                        {{this.burger}}
                    </h4>
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class= "form-control"  type="submit">Nom Nom!</button>
                    </form>
                </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h3 class= "header-format">Devoured Burgers</h3>
        <hr/>
        <ul class="list-group">
        {{#each burgers}}
            {{#if this.devoured}}
            <li class="list-group-item">
                <h4 class="header-format">
                    {{this.burger}}
                </h4>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class= "form-control" type="submit">Gimme more!</button>
                </form>
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<!-- Adds user's burger. -->
<h2>Add a Burger! </h2>

<div class="container">
    <div class="col-md-12" id= "burger-input">
        <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="burgerName"><h3 class= "header-format">What burger would you like?</h3></label>
                <input class="form-control" type="text" id="burg" name="burger" placeholder="List your burger here!">
            </div>

            <button class= "form-control" type="submit" name="devoured" value="0">Feed me!</button>
        </form>
    </div>      
</div>